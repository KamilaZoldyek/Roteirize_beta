<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notas_item"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"

        android:foregroundTint="@color/RcolorPrimaryDark"
        android:src="@drawable/ic_note_list"
        android:tint="@color/RcolorPrimaryDark"
        tools:foregroundTint="@color/RcolorPrimaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_nota_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="Titulo da nota"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/corpo_nota_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Anotacao"
            android:textSize="@dimen/paragraph_size" />


    </LinearLayout>


</LinearLayout>